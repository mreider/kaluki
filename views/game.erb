<!DOCTYPE html>
<html>
<head>

  <script src="https://cdn.jsdelivr.net/npm/phaser@3.15.1/dist/phaser-arcade-physics.min.js"></script>
  <title></title>
</head>
<body style="background-color:black">
  <script>
  var config = {
    type: Phaser.AUTO,
    parent: 'phaser-example',
    width: 1024,
    height: 600,
    scene: {
        preload: preload,
        create: create
    }
};

var game = new Phaser.Game(config);

function preload ()
{
    this.load.atlas('cards', 'images/cards.png', 'images/cards.json');
}

function create ()
{
    //  Create a stack of random cards

    var frames = this.textures.get('cards').getFrameNames();

    var x = 100;
    var y = 100;


    foo = this.add.image(x, y, 'cards', 'back');
    foo.displayWidth = 112;
    foo.displayHeight = 152;
    foo.setInteractive();


    this.input.on('gameobjectdown', function (pointer, gameObject) {

        bar = this.add.image(200, 200, 'cards', 'clubs10');
        bar.displayWidth = 112;
        bar.displayHeight = 152;


    }, this);
}

  </script>
</body>
</html>
